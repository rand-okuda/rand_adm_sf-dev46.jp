<!-- プリンター設定画面 -->
<apex:page controller="svfcloud.PrinterController" sidebar="false" tabStyle="Printer__tab">
<apex:includeScript value="//repo.svfcloud.com/service/sfdc/release-rg/lib/js/jquery-1.8.3.min.js"/>
<apex:includeScript value="/canvas/sdk/js/38.0/controller.js" />

     <style type="text/css">
        html[class]>body{
            overflow: hidden;
        }
    </style>
    
    <script>
        // for Packageing
        var label = '{!$Label.svfcloud__no_selected_item}';
        function frameResize(){
            // var w = $(window).width() -40;
            var h = $(window).height() - 200;
            // $('.bodyDiv iframe').attr('width', w);
            // $('.bodyDiv iframe').attr('height', h);
            // alert( $('.bodyDiv iframe').height());
            Sfdc.canvas.controller.resize({height : h +"px"});
        }
        
        $(window).on('load resize', function(){
             $(this).delay(500).queue(function() {
               frameResize()
               $(this).dequeue();
             });     
        });
        

    </script>
    
    <apex:canvasApp width="100%" height="100%" namespacePrefix="{!NameSpace}" developerName="{!CanvasPrinter}" applicationName="{!CanvasPrinter}" parameters="{ViewAllPrinters:{!ViewAllPrinters}, AccessPoint:'{!AccessPoint}'}" scrolling="auto"/>

</apex:page>